{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.buracosdeportugal.pt/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://api.buracosdeportugal.pt/uploads/:path*"
    }
  ]
}
